<!DOCTYPE html>
<html>
<head>
  <title>Register</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .error-message {
      color: #dc3545;
      font-size: 0.875rem;
      margin-top: 0.25rem;
      display: none;
    }
    .is-invalid {
      border-color: #dc3545 !important;
    }
  </style>
</head>
<body class="bg-light">
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card shadow">
          <div class="card-body p-5">
            <h3 class="text-center mb-4">Create Account</h3>
            
            {{#if error}}
              <div class="alert alert-danger">{{error}}</div>
            {{/if}}

            <form action="/secure-register" method="POST" id="registerForm">
              <div class="mb-3">
                <label class="form-label">Full Name</label>
                <input type="text" name="fullName" class="form-control" id="fullName" required
                       pattern="[A-Za-z\s]{2,}" title="Name must contain only letters and spaces (min 2 characters)">
                <div class="error-message" id="nameError">Name must contain only letters and spaces (minimum 2 characters)</div>
              </div>
              <div class="mb-3">
                <label class="form-label">Email</label>
                <input type="email" name="email" class="form-control" id="email" required>
                <div class="error-message" id="emailError">Please enter a valid email address</div>
              </div>
              <div class="mb-3">
                <label class="form-label">Passport Number</label>
                <input type="text" name="passportNumber" class="form-control" id="passportNumber" required
                       pattern="[A-Z0-9]{6,}" title="Passport must be 6+ uppercase letters/numbers" maxlength="20">
                <div class="error-message" id="passportError">Passport must be 6+ uppercase letters and numbers only</div>
              </div>
              <div class="mb-3">
                <label class="form-label">Password</label>
                <input type="password" name="password" class="form-control" id="password" required
                       minlength="6" title="Password must be at least 6 characters">
                <div class="error-message" id="passwordError">Password must be at least 6 characters</div>
              </div>
              <button type="submit" class="btn btn-primary w-100">Register</button>
            </form>

            <div class="text-center mt-3">
              <a href="/auth/login">Already have an account? Login here</a><br>
              <a href="/">Back to Home</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const form = document.getElementById('registerForm');
      const fullNameInput = document.getElementById('fullName');
      const emailInput = document.getElementById('email');
      const passportInput = document.getElementById('passportNumber');
      const passwordInput = document.getElementById('password');
      
      fullNameInput.addEventListener('input', function() {
        this.value = this.value.replace(/[^A-Za-z\s]/g, '');
        validateName();
      });
      
      passportInput.addEventListener('input', function() {
        this.value = this.value.toUpperCase().replace(/[^A-Z0-9]/g, '');
        validatePassport();
      });
      
      emailInput.addEventListener('blur', validateEmail);
      passwordInput.addEventListener('blur', validatePassword);
      
      function validateName() {
        const name = fullNameInput.value;
        const isValid = /^[A-Za-z\s]{2,}$/.test(name);
        toggleError('nameError', !isValid);
        return isValid;
      }
      
      function validateEmail() {
        const email = emailInput.value;
        const isValid = /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email);
        toggleError('emailError', !isValid);
        return isValid;
      }
      
      function validatePassport() {
        const passport = passportInput.value;
        const isValid = /^[A-Z0-9]{6,}$/.test(passport);
        toggleError('passportError', !isValid);
        return isValid;
      }
      
      function validatePassword() {
        const password = passwordInput.value;
        const isValid = password.length >= 6;
        toggleError('passwordError', !isValid);
        return isValid;
      }
      
      function toggleError(errorId, show) {
        const errorElement = document.getElementById(errorId);
        const inputElement = document.getElementById(errorId.replace('Error', ''));
        
        if (show) {
          errorElement.style.display = 'block';
          inputElement.classList.add('is-invalid');
        } else {
          errorElement.style.display = 'none';
          inputElement.classList.remove('is-invalid');
        }
      }
      
      form.addEventListener('submit', function(e) {
        const isNameValid = validateName();
        const isEmailValid = validateEmail();
        const isPassportValid = validatePassport();
        const isPasswordValid = validatePassword();
        
        if (!isNameValid || !isEmailValid || !isPassportValid || !isPasswordValid) {
          e.preventDefault();
          if (!isNameValid) {
            document.getElementById('nameError').scrollIntoView({ behavior: 'smooth', block: 'center' });
          } else if (!isEmailValid) {
            document.getElementById('emailError').scrollIntoView({ behavior: 'smooth', block: 'center' });
          } else if (!isPassportValid) {
            document.getElementById('passportError').scrollIntoView({ behavior: 'smooth', block: 'center' });
          } else if (!isPasswordValid) {
            document.getElementById('passwordError').scrollIntoView({ behavior: 'smooth', block: 'center' });
          }
        }
      });
    });
  </script>
</body>
</html>
