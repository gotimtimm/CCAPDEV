<!DOCTYPE html>
<html>
<head>
  <title>Edit Reservation</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .seat-map {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 6px;
      margin: 15px 0 25px 0;
    }
    .seat {
      width: 60px;
      height: 35px;
      background: #e0e0e0;
      text-align: center;
      line-height: 35px;
      border-radius: 6px;
      cursor: pointer;
      font-size: 13px;
    }
    .seat.selected {
      background: #28a745;
      color: white;
      font-weight: bold;
    }
    .seat.occupied {
      background: #dc3545;
      color: white;
      cursor: not-allowed;
    }
  </style>
</head>
<body>
  <div class="container mt-4">
    <h3>Edit Reservation</h3>
    
    <form action="/reservations/update/{{reservation._id}}" method="POST">
      <input type="hidden" name="flightId" value="{{reservation.flightId._id}}">
      
      <div class="mb-3">
        <label>Passenger Name</label>
        <input type="text" name="passengerName" class="form-control" value="{{reservation.passengerName}}" required>
      </div>
      
      <div class="mb-3">
        <label>Email</label>
        <input type="email" name="passengerEmail" class="form-control" value="{{reservation.passengerEmail}}" required>
      </div>
      
      <div class="mb-3">
        <label>Passport Number</label>
        <input type="text" name="passengerPassport" class="form-control" value="{{reservation.passengerPassport}}" required>
      </div>
      
      <div class="mb-3">
        <label>Meal Option</label>
        <select name="mealOption" class="form-control">
          <option value="Chips" {{#eq reservation.mealOption "Chips"}}selected{{/eq}}>Chips (PHP 0)</option>
          <option value="Mixed Vegetables with Mashed Potato" {{#eq reservation.mealOption "Mixed Vegetables with Mashed Potato"}}selected{{/eq}}>Mixed Vegetables with Mashed Potato (PHP 150)</option>
          <option value="Sausage with Hashbrown" {{#eq reservation.mealOption "Sausage with Hashbrown"}}selected{{/eq}}>Sausage with Hashbrown (PHP 270)</option>
          <option value="Hainanese Soy Chicken with Brown Rice" {{#eq reservation.mealOption "Hainanese Soy Chicken with Brown Rice"}}selected{{/eq}}>Hainanese Soy Chicken with Brown Rice (PHP 320)</option>
          <option value="Chives Dumpling with Japanese Gyudon" {{#eq reservation.mealOption "Chives Dumpling with Japanese Gyudon"}}selected{{/eq}}>Chives Dumpling with Japanese Gyudon (PHP 360)</option>
        </select>
      </div>
      
      <div class="mb-3">
        <label>Extra Baggage</label>
        <input type="number" name="extraBaggage" class="form-control" value="{{reservation.extraBaggage}}" min="0">
        <small class="text-muted">PHP 500 per bag</small>
      </div>
      
      <div class="mb-3">
        <label>Select Seat</label>
        <div class="seat-map" id="seatMap">
          <!-- Seat map will be populated by JavaScript -->
        </div>
        <input type="hidden" id="selectedSeat" name="selectedSeat" value="{{reservation.selectedSeat}}">
      </div>
      
      <button type="submit" class="btn btn-primary">Update Reservation</button>
      <a href="/reservations/my-reservations" class="btn btn-secondary">Cancel</a>
    </form>
  </div>

  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script>
    $(document).ready(function(){
      const currentSeat = "{{reservation.selectedSeat}}";
      let selectedSeat = currentSeat;
      
      // Generate seat map
      for(let row = 1; row <= 4; row++){
        for(let col = 1; col <= 15; col++){
          let seatNum = String.fromCharCode(64 + row) + col;
          const isCurrentSeat = seatNum === currentSeat;
          const seatClass = isCurrentSeat ? 'seat selected' : 'seat';
          $("#seatMap").append(`<div class="${seatClass}" data-seat="${seatNum}">${seatNum}</div>`);
        }
        if (row == 2){
          $("#seatMap").append("<div style='flex-basis: 100%; height: 50px;'></div>");
        } else {
          $("#seatMap").append("<div style='flex-basis: 100%; height: 5px;'></div>");
        }
      }
      
      // Seat selection
      $(document).on("click", ".seat", function(){
        if($(this).hasClass("occupied")) return;
        $(".seat.selected").removeClass("selected");
        $(this).addClass("selected");
        selectedSeat = $(this).data("seat");
        $("#selectedSeat").val(selectedSeat);
      });
    });
  </script>
</body>
</html>
