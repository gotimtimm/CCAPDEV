<!DOCTYPE html>
<html>
<head>
  <title>Admin - User Management</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

  <div class="container mt-4">
    <h3>User Management</h3>
    
    <div class="card shadow-sm">
      <div class="card-body">
        <table class="table table-hover align-middle">
          <thead class="table-dark">
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Passport</th>
              <th>Role</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            {{#each users}}
            <tr>
              <td>{{this.fullName}}</td>
              <td>{{this.email}}</td>
              <td>{{this.passportNumber}}</td>
              <td><span class="badge {{#if (eq this.role 'admin')}}bg-danger{{else}}bg-primary{{/if}}">{{this.role}}</span></td>
              <td>
                <a href="/admin/users/edit/{{this._id}}" class="btn btn-sm btn-warning">Edit Profile</a>
                <a href="/admin/users/{{this._id}}/reservations" class="btn btn-sm btn-info text-white">View Bookings</a>
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
    
    <div class="mt-3">
        <a href="/admin/flights" class="btn btn-secondary">&larr; Back to Dashboard</a>
    </div>
  </div>
</body>
</html>