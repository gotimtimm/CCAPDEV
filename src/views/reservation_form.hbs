<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <title>Flight Reservation</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: url("/images/elnido.jpg"); 
      background-size: cover;
      margin: 0;
      padding: 0px;
    }
    .content-container {
      max-width: 1250px;
      margin: 50px auto 0 auto;  
      background: #ffffff;
      padding: 50px;
      border-radius: 50px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }
    .navbar .container-fluid {
      padding: 0 40px;
    }
    h1 {
      color: #007bff;
      margin-bottom: 50px;
      margin-top: -20px;
    }
    label {
      font-weight: bold;
      margin-top: 10px;
      display: block;
    }
    input, select {
      width: 100%;
      padding: 8px;
      border-radius: 8px;
      border: 1px solid #ccc;
      margin-bottom: 10px;
      margin-top: 10px;
      font-size: 14px;
    }
    .seat-map {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 6px;
      margin: 15px 0 25px 0;
    }
    .seat {
      width: 60px;
      height: 35px;
      background: #e0e0e0;
      text-align: center;
      line-height: 35px;
      border-radius: 6px;
      cursor: pointer;
      font-size: 13px;
    }
    .seat.selected {
      background: #28a745;
      color: white;
      font-weight: bold;
    }
    .seat.occupied {
      background: #dc3545;
      color: white;
      cursor: not-allowed;
    }
    .summary-box {
      background: #f8f9fa;
      padding: 15px;
      border-radius: 10px;
      margin-top: 15px;
    }
    button {
      width: 100%;
      padding: 10px;
      background: #007bff;
      color: white;
      border: none;
      border-radius: 8px;
      font-size: 16px;
      cursor: pointer;
      margin-top: 50px;  
      margin-bottom: 50px;  
    }
    .back-button {
      width: 100;
      padding: 10px;
      background: #ff0000;
      color: white;
      border: none;
      border-radius: 8px;
      text-decoration: none;
      font-size: 16px;
      cursor: pointer; 
    }
    #bg {
      position: fixed;
      top: 0; left: 0; right: 0; bottom: 0;
      background-position: center;
      background-repeat: no-repeat;
      background-size: 120%;
      filter: blur(10px);
      z-index: -1;
    }
    .error-message {
      color: #dc3545;
      font-size: 14px;
      margin-top: 5px;
      display: none;
    }
    .is-invalid {
      border-color: #dc3545 !important;
    }
  </style>
</head>
<body>
  <div id="bg"></div>
  <div class="content-container">
    <h1>Book Your Flight üîñ</h1>
    
    <!-- Error Alert Box -->
    <div id="errorAlert" class="alert alert-danger" style="display: none;"></div>
    
    <form id="reservationForm" method="POST" action="/secure-reservations">
      <input type="hidden" id="flightId" name="flightId" value="{{ flightId }}">
      <input type="hidden" id="selectedSeat" name="selectedSeat" value="">
      <input type="hidden" id="totalCost" name="totalCost" value="">

      <div class="mb-3">
        <label for="name">Full Name</label>
        <input type="text" id="name" name="passengerName" placeholder="Enter full name" required 
               pattern="[A-Za-z\s]{2,}" title="Name must contain only letters and spaces (min 2 characters)">
        <div class="error-message" id="nameError">Name must contain only letters and spaces (minimum 2 characters)</div>
      </div>

      <div class="mb-3">
        <label for="email">Email</label>
        <input type="email" id="email" name="passengerEmail" placeholder="Enter email" required>
        <div class="error-message" id="emailError">Please enter a valid email address</div>
      </div>

      <div class="mb-3">
        <label for="passport">Passport Number</label>
        <input type="text" id="passport" name="passengerPassport" placeholder="Enter passport number" required
               pattern="[A-Z0-9]{6,}" title="Passport must be 6+ uppercase letters/numbers" maxlength="20">
        <div class="error-message" id="passportError">Passport must be 6+ uppercase letters and numbers only</div>
      </div>

      <div class="mb-3">
        <label for="meal">Meal Option</label>
        <select id="meal" name="mealOption">
          <option value="0">Chips (PHP 0)</option>
          <option value="150">Mixed Vegetables with Mashed Potato (PHP 150)</option>
          <option value="270">Sausage with Hashbrown (PHP 270)</option>
          <option value="320">Hainanese Soy Chicken with Brown Rice(PHP 320)</option>
          <option value="360">Chives Dumpling with Japanese Gyudon (PHP 360)</option>
        </select>
      </div>

      <div class="mb-3">
        <label for="baggage">Extra Baggage (PHP 500 per bag)</label>
        <input type="number" id="baggage" name="extraBaggage" value="0" min="0" max="10">
        <div class="error-message" id="baggageError">Maximum 10 bags allowed</div>
      </div>

      <div class="mb-3">
        <label for="seatMap">Select Your Seat</label>
        <div class="seat-map" id="seatMap"></div>
        <div class="error-message" id="seatError">Please select a seat before confirming</div>
      </div>

      <div class="summary-box">
        <h3>Reservation Summary</h3>
        <p id="summary">Base Fare: PHP 5,000<br>Total: PHP 5,000</p>
      </div>

      <button type="submit">Confirm Reservation ‚úàÔ∏è</button>
      <a href="/" class="back-button">‚¨Ö Back to Flight Search</a>
    </form>
  </div>
  
  <script>
    const images = [
      "/images/elnido.jpg",
      "/images/baguio.jpg",
      "/images/mayon.jpg",
      "/images/ilocos.jpg",
      "/images/bohol.jpg"
    ];
    const randomImage = images[Math.floor(Math.random() * images.length)];
    document.body.style.background = `url('${randomImage}') no-repeat center center fixed`;
    document.body.style.backgroundSize = "cover";
    document.getElementById("bg").style.background = `url('${randomImage}') center/cover no-repeat fixed`;
  </script>
  
      // ===== SYSTEM HARDENING: Client-side Validation =====
  <script>
    $(document).ready(function(){
      let baseFare = 5000;
      let selectedSeat = null;
      
      for(let row = 1; row <= 4; row++){
        for(let col = 1; col <= 15; col++){
          let seatNum = String.fromCharCode(64 + row) + col;
          $("#seatMap").append(`<div class="seat" data-seat="${seatNum}">${seatNum}</div>`);
        }
        if (row == 2){
          $("#seatMap").append("<div style='flex-basis: 100%; height: 50px;'></div>");
        } else {
          $("#seatMap").append("<div style='flex-basis: 100%; height: 5px;'></div>");
        }
      }
     
      $(document).on("click", ".seat", function(){
        if($(this).hasClass("occupied")) return;
        $(".seat.selected").removeClass("selected");
        $(this).addClass("selected");
        selectedSeat = $(this).data("seat");
        $("#seatError").hide();
        updateSummary();
      });
    
      function updateSummary(){
        let mealCost = parseInt($("#meal").val());
        let baggageCost = parseInt($("#baggage").val()) * 500;
        let total = baseFare + mealCost + baggageCost;
        $("#summary").html(`
          Base Fare: PHP ${baseFare}<br>
          Meal Cost: PHP ${mealCost}<br>
          Baggage: PHP ${baggageCost}<br>
          Seat: ${selectedSeat || "Not selected"}<br>
          <b>Total: PHP ${total}</b>
        `);
        
        $("#selectedSeat").val(selectedSeat || "");
        $("#totalCost").val(total);
      }

      $("#meal, #baggage").on("change keyup", updateSummary);
      
      $("#name").on("input", function() {
        $(this).val($(this).val().replace(/[^A-Za-z\s]/g, ''));
        validateName();
      });
      
      $("#passport").on("input", function() {
        $(this).val($(this).val().toUpperCase().replace(/[^A-Z0-9]/g, ''));
        validatePassport();
      });
      
      $("#email").on("blur", validateEmail);
      $("#baggage").on("change", validateBaggage);
      
      function validateName() {
        const name = $("#name").val();
        const isValid = /^[A-Za-z\s]{2,}$/.test(name);
        toggleError("nameError", !isValid);
        return isValid;
      }
      
      function validateEmail() {
        const email = $("#email").val();
        const isValid = /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email);
        toggleError("emailError", !isValid);
        return isValid;
      }
      
      function validatePassport() {
        const passport = $("#passport").val();
        const isValid = /^[A-Z0-9]{6,}$/.test(passport);
        toggleError("passportError", !isValid);
        return isValid;
      }
      
      function validateBaggage() {
        const baggage = parseInt($("#baggage").val());
        const isValid = baggage >= 0 && baggage <= 10;
        toggleError("baggageError", !isValid);
        return isValid;
      }
      
      function validateSeat() {
        const isValid = selectedSeat !== null && /^[A-D][1-9][0-5]?$/.test(selectedSeat);
        toggleError("seatError", !isValid);
        return isValid;
      }
      
      function toggleError(errorId, show) {
        if (show) {
          $("#" + errorId).show();
        } else {
          $("#" + errorId).hide();
        }
      }
      
      $("#reservationForm").submit(function(e){
        e.preventDefault();
        
        const isNameValid = validateName();
        const isEmailValid = validateEmail();
        const isPassportValid = validatePassport();
        const isBaggageValid = validateBaggage();
        const isSeatValid = validateSeat();
        
        if (isNameValid && isEmailValid && isPassportValid && isBaggageValid && isSeatValid) {
          $("#errorAlert").hide();
          this.submit();
        } else {
          $("#errorAlert").text("Please fix the errors above before submitting.").show();
          $('html, body').animate({
            scrollTop: $("#errorAlert").offset().top - 20
          }, 500);
        }
      });

      const urlParams = new URLSearchParams(window.location.search);
      const error = urlParams.get('error');
      if (error) {
        $("#errorAlert").text(decodeURIComponent(error)).show();
      }
    });
  </script>
</body>
</html>
