<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <title>Flight Reservation</title>

  <style>
    body {
      font-family: Arial, sans-serif;
      background: url("/images/elnido.jpg"); 
      background-size: cover;
      margin: 0;
      padding: 0px;
    }

    .content-container {
      max-width: 1250px;
      margin: 50px auto 0 auto;  
      background: #ffffff;
      padding: 50px;
      border-radius: 50px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .navbar .container-fluid {
      padding: 0 40px;
    }

    h1 {
      color: #007bff;
      margin-bottom: 50px;
      margin-top: -20px;
    }

    label {
      font-weight: bold;
      margin-top: 10px;
      display: block;
    }

    input, select {
      width: 100%;
      padding: 8px;
      border-radius: 8px;
      border: 1px solid #ccc;
      margin-bottom: 10px;
      margin-top: 10px;
      font-size: 14px;
    }

    .seat-map {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 6px;
      margin: 15px 0 25px 0;
    }

    .seat {
      width: 60px;
      height: 35px;
      background: #e0e0e0;
      text-align: center;
      line-height: 35px;
      border-radius: 6px;
      cursor: pointer;
      font-size: 13px;
    }

    .seat.selected {
      background: #28a745;
      color: white;
      font-weight: bold;
    }

    .seat.occupied {
      background: #dc3545;
      color: white;
      cursor: not-allowed;
    }

    .summary-box {
      background: #f8f9fa;
      padding: 15px;
      border-radius: 10px;
      margin-top: 15px;
    }

    button {
      width: 100%;
      padding: 10px;
      background: #007bff;
      color: white;
      border: none;
      border-radius: 8px;
      font-size: 16px;
      cursor: pointer;
      margin-top: 50px;  
      margin-bottom: 50px;
    }

    .back-button {
      width: 100;
      padding: 10px;
      background: #ff0000;
      color: white;
      border: none;
      border-radius: 8px;
      text-decoration: none;
      font-size: 16px;
      cursor: pointer;
    }

    #bg {
      position: fixed;
      top: 0; left: 0; right: 0;
      bottom: 0;
      background-position: center;
      background-repeat: no-repeat;
      background-size: 120%;
      filter: blur(10px);
      z-index: -1;
    }


  </style>
</head>

<body>

  <div id="bg"></div>
  <div class="content-container">
    <h1>Book Your Flight üîñ</h1>
    <div class="alert alert-info">
      Booking Flight <strong>{{flight.flightNumber}}</strong> ({{flight.origin}} &rarr; {{flight.destination}}) on <strong>{{reservedDate}}</strong> for ‚Ç±{{flight.basePrice}}
    </div>

    <form id="reservationForm" action="/reservation-form/create" method="POST">
      <input type="hidden" id="flightId" name="flightId" value="{{flight._id}}"> 
      <input type="hidden" id="reservedDate" name="reservedDate" value="{{reservedDate}}">

      <label>Full Name</label>
      <input type="text" id="name" name="fullName" placeholder="Enter full name" required>

      <label>Email</label>
      <input type="email" id="email" name="email" placeholder="Enter email" required>

      <label>Passport Number</label>
      <input type="text" id="passport" name="passportNumber" placeholder="Enter passport number" required>

      <label>Meal Option</label>
      <select id="meal" name="mealOption">
        <option 
        value="0">Chips (PHP 0)</option>
        <option value="150">Mixed Vegetables with Mashed Potato (PHP 150)</option>
        <option value="270">Sausage with Hashbrown (PHP 270)</option>
        <option value="320">Hainanese Soy Chicken with Brown Rice(PHP 320)</option>
        <option value="360">Chives Dumpling with Japanese Gyudon (PHP 360)</option>
      </select>

      <label>Extra Baggage Weight (KG)</label>
      <select id="baggage" name="extraBaggage" class="form-select">
        <option value="2">2 kg (Free)</option>
        <option value="5">5 kg (‚Ç±500)</option>
        <option value="10">10 kg (‚Ç±1,000)</option>
        <option value="15">15 kg (‚Ç±1,500)</option>
        <option value="20">20 kg (‚Ç±2,000)</option>
      </select>

      <label>Select Your Seat</label>
     
      <div class="seat-map" id="seatMap"></div>

      <div class="summary-box">
        <h3>Reservation Summary</h3>
        <p id="summary">Base Fare: PHP {{flight.basePrice}}<br>Total: PHP {{flight.basePrice}}</p>
      </div>

      <input type="hidden" id="selectedSeatHidden" name="selectedSeat">
      <input type="hidden" id="totalPriceHidden" name="totalPrice">


      <button type="submit">Confirm Reservation ‚úàÔ∏è</button>

      <a href="/" class="back-button">‚¨Ö Back to Flight Search</a>

    </form>
  </div>

   <script>
  
    const images = [
      "/images/elnido.jpg",
      "/images/baguio.jpg",
      "/images/mayon.jpg",
    
      "/images/ilocos.jpg",
      "/images/bohol.jpg"
    ];

    const randomImage = images[Math.floor(Math.random() * images.length)];
    document.body.style.background = `url('${randomImage}') no-repeat center center fixed`;
    document.body.style.backgroundSize = "cover";
    document.getElementById("bg").style.background = `url('${randomImage}') center/cover no-repeat fixed`;
  </script>

  <script>
    $(document).ready(function(){
      // Set base fare from server-side data
      let baseFare = parseInt("{{flight.basePrice}}" || 5000); 
      let selectedSeat = null;

      // Define baggage tiers for pricing calculation
      const baggageTiers = [
        { weight: 2, cost: 0 },
        { weight: 5, cost: 500 },
        { weight: 10, cost: 1000 },
        { weight: 15, cost: 1500 },
        { weight: 20, cost: 2000 }
      ];
      
      for(let row = 1; row <= 4; row++){
        for(let col = 1; col <= 15; col++){
          let seatNum = String.fromCharCode(64 + row) + col; // A1, A2, ..., D15
          $("#seatMap").append(`<div class="seat" data-seat="${seatNum}">${seatNum}</div>`);
        
        }

        if (row == 2){
          $("#seatMap").append("<div style='flex-basis: 100%; height: 50px;'></div>");
        } else {
          $("#seatMap").append("<div style='flex-basis: 100%; height: 5px;'></div>");
        }
      }

     
      $(document).on("click", ".seat", function(){
        if($(this).hasClass("occupied")) return;
        $(".seat.selected").removeClass("selected");
       
        $(this).addClass("selected");
        selectedSeat = $(this).data("seat");
        updateSummary();
      });

    
      function updateSummary(){
        let mealCost = parseInt($("#meal").val());
        
        // Get the selected baggage weight (in KG)
        let selectedWeightKg = parseInt($("#baggage").val());
        // Find the corresponding cost based on the weight tiers
        let baggageCost = baggageTiers.find(tier => tier.weight === selectedWeightKg)?.cost || 0;
        
        let total = baseFare + mealCost + baggageCost;
        
        // Update hidden fields for submission
        $("#selectedSeatHidden").val(selectedSeat);
        $("#totalPriceHidden").val(total); 

        $("#summary").html(`
          Base Fare: PHP ${baseFare}<br>
          Meal Cost: PHP ${mealCost}<br>
          Baggage: PHP ${baggageCost} (${selectedWeightKg} kg)<br>
          Seat: ${selectedSeat || "Not selected"}<br>
          <b>Total: PHP ${total}</b>
        `);
      }

      // Initial summary update
      updateSummary();
      
      $("#meal, #baggage").on("change keyup", updateSummary);
      
      $("#reservationForm").submit(function(e){
        if (!selectedSeat) {
            e.preventDefault();
            alert("Please select a seat before confirming your reservation.");
            return false;
        }
        
        // Final update of hidden fields before submission
        updateSummary();
        
        // The form now submits to the POST route for creation
        return true; 
      });
    });
  </script>
</body>
</html>