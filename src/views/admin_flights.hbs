<h3>{{pageTitle}}</h3>

<a href="/admin/flights/new" class="btn btn-primary mb-3">Add New Flight</a>

<div class="card shadow-sm">
  <div class="table-responsive">
    <table class="table table-hover table-striped mb-0">
      <thead class="table-dark">
        <tr>
          <th>Flight No</th>
          <th>Origin</th>
          <th>Destination</th>
          <th>Price</th>
          <th>Schedule</th>
          <th>Aircraft Type</th>
          <th>Seat Capacity</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {{#each flights}}
        <tr>
          <td>{{this.flightNumber}}</td>
          <td>{{this.origin}}</td>
          <td>{{this.destination}}</td>
          <td>â‚±{{this.basePrice}}</td>
          <td>{{this.schedule}}</td>
          <td>{{this.aircraftType}}</td>
          <td>{{this.seatCapacity}}</td>
          <td>
            <a href="/admin/flights/edit/{{this._id}}" class="btn btn-sm btn-warning">Edit</a>
            
            <form action="/admin/flights/delete/{{this._id}}" method="POST" class="d-inline">
              <button type="submit" class="btn btn-sm btn-danger">Delete</button>
            </form>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>

{{#if (eq flights.length 0)}}
  <p class="text-center mt-3">No flights found. <a href="/admin/flights/new">Add one!</a></p>
{{/if}}